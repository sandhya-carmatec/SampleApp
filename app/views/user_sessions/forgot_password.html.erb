<%= form_tag('/forgot_password') do %>
  <%#= render 'layouts/flash_messages' %>
  <h5>Please enter the email address which is used to create your account, and we will send you a link to reset your password.</h5>
  <table>
    <tr>
      <td>Email Address</td>
      <td><%= text_field "user", "email" %></td>
    </tr>
    <tr></tr>
    <tr>
      <td></td>
      <td><%= submit_tag 'Reset' %> <%= button_to_function 'Cancel', "window.location.href= '/login'", :class => 'reset_button' %></td>
    </tr>
  </table>
<% end %>

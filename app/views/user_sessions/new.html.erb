<%= form_for @user_session,:url => user_sessions_path do |f| %>
  <%= render 'flash_messages' %>


  <div align="center" >
    <h2  style="margin-top: 240px;" align="center" > SampleApp</h2>
    <table  border="0" style="margin-top: 14px;" >
      <tr>
        <td>
          Username:
        </td>
        <td>
          <%= f.text_field :login, :class => "common_input_text" %>
          <div class="vendor_error_msg1"><%= validation_errors @user_session.errors['login'] %></div>
        </td>
      </tr>
      <tr>
        <td>
          Password:
        </td>
        <td>
          <%= f.password_field :password, :class => "common_input_text" %>
          <div class="vendor_error_msg1"><%= validation_errors @user_session.errors['password'] %></div>
        </td>
      </tr>
      <tr>
        <td><%= f.submit 'Login' %></td>
        <td><%= link_to "Forgot Password?", {:controller =>"user_sessions", :action => "forgot_password"} %>&nbsp&nbsp&nbsp&nbsp<%= link_to "Signup", signup_path %></td>
      </tr>
    </table>
  </div>
<% end %>

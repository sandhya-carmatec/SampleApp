<html>
  <head>
    <title>SampleApp</title>
    <%= stylesheet_link_tag 'application', 'jquery.notifyBar', 'fullcalendar', 'sampleapp', 'scaffold', 'basic', 'jquery.ui.datepicker', '/javascripts/jquery-ui-1.8.16.custom/css/custom-theme/jquery-ui-1.8.16.custom.css'%>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery', 'jquery.notifyBar','jquery-1.6.2.min_1', 'application', 'fullcalendar', 'gcal', 'basic', 'jquery.simplemodal', 'date_picker/jquery-ui-1.8.16.custom.min','jquery-ui-1.8.16.custom/js/jquery-ui-1.8.16.custom.min.js' %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
    <% if !flash[:error].nil? or !flash[:notice].nil? %>
      <script>
        $(function () {
          $.notifyBar({
            html: "<%= !flash[:error].nil? ? flash[:error] : flash[:notice] -%>",
            cls: "<%= !flash[:error].nil? ? 'error' : 'success' -%>",
            close: true,
            delay: 2500,
            animationSpeed: "normal"
          });
        });
      </script>
    <% end %>
  </head>
  <body>
    <div id="container">
      <div class="user_status" >
        <div class="user_status_text">
          <div class="user_status_image">
            <%= image_tag (current_user.profile.profile_photo.url(:thumb)) %>
            <div class="logged_in">Logged in as</div>
            <div class="logged_in_name"><%= current_user.profile.first_name %>&nbsp;<%= current_user.profile.last_name %></div>
          </div>
        </div>
      </div>
      <div id="header">
        <h1>
			SAMPLE APPLICATION
        </h1>
      </div>
      <% if @current_user %>

        <div id="navigation">
          <ul>
            <li><%= link_to "HOME", home_index_path %></li>
            <li><%= link_to "LOCATIONS", locations_path  %></li>
            <li><%= link_to "ARTICLES", articles_path %></li>
            <li><%= link_to "LOGOUT",logout_path %></li>
          </ul>
        </div>

      <% else %>
        <div align="right">
          <%= link_to "signup", new_user_path %>
        </div>
      <% end %>
      <div id="aside">
        <h3>
				Aside heading
        </h3>
        <p>
				Duis autem vel eum iriure dolor in hendrerit in vulputate velit esse molestie consequat, vel illum dolore eu feugiat nulla facilisis at vero eros et accumsan.
        </p>
        <div class="calender_main">
          <% @date=params[:month] ? Date.parse(params[:month]) : Date.today %>
          <div id="memo_calendar" >
            <h2 id="month">
              <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%B-%Y") %>
              <%=h @date.strftime("%B %Y") %>
              <%= link_to ">", :month => (@date.end_of_month+1).strftime("%B-%Y") %>
            </h2>
            <%= calendar_for @notes, :year => @date.year, :month => @date.month do |calendar| %>
              <%= calendar.head('Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat') %>
              <%= calendar.day  do |date,notes| %>
                <% @memo_date = date %>
                <%  @memo = Memo.where("memo_date = '#{@memo_date}' and created_by = '#{current_user.login}'").first %>
                <% if @memo %>
                  <%=link_to_function h(date.day), "display_memo('#{date}')", :style =>"color:#0099CC" %>
                <% else %>
                  <%=link_to_function h(date.day), "display_memo('#{date}')" %>
                <% end %>
                <ul><% for note in notes %><li><%= link_to h(note.name), note %></li><% end %></ul>

              <%end%>
            <%end%>
            <%  @memo = Memo.where("memo_date ='#{Time.now.strftime("%Y-%m-%d")}' and created_by = '#{current_user.login}'").first %>
            <% if !@memo.nil? %>
              Today's Memo: <%= @memo.memo %>
            <% end %>
          </div>
        </div>
      </div>
      <div id="content">
        <%= yield %>
      </div>
      <%= yield :scripts %>
<%#*<div id="content-container">%>
      <div id="footer">
		Copyright Â© Sample App, 2012
      </div>
<%#*</div>%>
    </div>
    <div id ="memo_popup" style="width:400px;height:200px;float:left;display: none;overflow: auto"></div>
  </body>
</html>






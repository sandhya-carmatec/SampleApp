<!DOCTYPE html>
<html>
  <head>
    <title>SampleApp</title>
    <%= stylesheet_link_tag 'application', 'jquery.notifyBar', 'sampleapp' %>
<%#= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery', 'jquery.notifyBar', 'application' %>
    <%= csrf_meta_tag %>
    <% if !flash[:error].nil? or !flash[:notice].nil? %>
      <script>
        $(function () {
          $.notifyBar({
            html: "<%= !flash[:error].nil? ? flash[:error] : flash[:notice] -%>",
            cls: "<%= !flash[:error].nil? ? 'error' : 'success' -%>",
            close: true,
            delay: 2500,
            animationSpeed: "normal"
          });
        });
      </script>
    <% end %>
  </head>
  <body>
    <div class="Ehealth_wrapper_shade">
      <div class="Ehealth_wrapper">
        <% if @current_user %>
          <div align="right">
            <%= image_tag (current_user.profile.profile_photo.url(:thumb)) %><br />
            <%= link_to "Sign out",  logout_path, :class => "button" %>
          </div>
        <% else %>
          <div align="right">
            <%= link_to "signup", new_user_path %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>

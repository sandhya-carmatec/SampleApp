<html>
  <head>
    <title>SampleApp</title>
    <%= stylesheet_link_tag 'application', 'jquery.notifyBar', 'sampleapp', 'scaffold' %>
<%#= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery', 'jquery.notifyBar', 'application' %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
    <% if !flash[:error].nil? or !flash[:notice].nil? %>
      <script>
        $(function () {
          $.notifyBar({
            html: "<%= !flash[:error].nil? ? flash[:error] : flash[:notice] -%>",
            cls: "<%= !flash[:error].nil? ? 'error' : 'success' -%>",
            close: true,
            delay: 2500,
            animationSpeed: "normal"
          });
        });
      </script>
    <% end %>
  </head>
  <body>
    <div class="Ehealth_wrapper_shade">
      <div class="Ehealth_wrapper">
        <div class="user_status" >
          <div class="user_status_text">
            <div class="user_status_image">
              <%= image_tag (current_user.profile.profile_photo.url(:thumb)) %>
              <div class="logged_in">Logged in as</div>
              <div class="logged_in_name"><%= current_user.profile.first_name %>&nbsp;<%= current_user.profile.last_name %></div>
            </div>
          </div>
        </div>
        <div class="title_color">
          <h2  align="center">SAMPLE APPLICATION</h2>
        </div>
        <% if @current_user %>
          <div align="center" class="menu_color">
            <table align="center" style="margin-top: 12px;" >
              <tr align="center">
                <td width="16%"><%= link_to "HOME", home_index_path %></td>
                <td width="16%" ><a href="#">PRODUCTS</a></td>
                <td width="16%"><a href="#">ABOUT US</a></td>
                <td width="16%"><a href="#">ABOUT US</a></td>
                <td width="16%"><a href="#">ABOUT US</a></td>
                <td width="16%"><a href="#">ABOUT US</a></td>
                <td width="16%"><%= link_to "LOGOUT",logout_path %></td>
              </tr>
            </table>
          </div>
        <% else %>
          <div align="right">
            <%= link_to "signup", new_user_path %>
          </div>
        <% end %>
        <%= yield %>
        <%= yield :scripts %>
      </div>
    </div>
  </body>
</html>
